# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "3"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
    /${HOME}/rpi_yocto/poky/meta \
    /${HOME}/rpi_yocto/poky/meta-poky \
    /${HOME}/rpi_yocto/meta-raspberrypi \
    /${HOME}/rpi_yocto/meta-pi \
"